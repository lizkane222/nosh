<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header') %>
</head>
<body>
    <h3>Update food item</h3>
    <hr>
    <section class="food_item">
        <form action="/recipe/<%= recipe._id %>/<%= item.id %>/updateItem?_method=PUT" method="POST">
          <input type="text" name="foodName" value="<%= item.foodName %>" />
          <input type="text" name="quantity" value="<%= item.quantity %>" />
          <input type="text" name="unit" value="<%= item.unit %>" />
          <input class="btn btn-primary btn-sm" id="button" type="submit" value="Update Item"/>
        </form>
        <br/><br/><br/><br/><br/>
        <form action="/recipe/<%= recipe._id %>/<%= item._id %>/updateItem?_method=DELETE" method="POST">
            <input class="btn btn-danger btn-sm" type="submit" value="Delete Food Item">
        </form> 
    </section>

    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>
</html>